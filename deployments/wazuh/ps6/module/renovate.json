{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["main.tf"],
      "matchStrings": [
        "custom-config-repository\\s*=\\s*\"git\\+ssh:\/\/git@github.com\/(?<depName>.+)\\.git@staging(?<currentValue>.+)\""
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^staging(?<version>\\d+)$"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "automerge": true
    }
  ]
}

